@{
    ViewData["Title"] = "Student Login";
}

<div class="login-container">
    <h2 class="text-center mb-4">Student Login</h2>

    <form asp-action="Login" method="post" class="shadow p-4 bg-white rounded">
        <div class="form-group mb-3">
            <label>Email</label>
            <input name="email" type="email" class="form-control" value='@Html.Value("email")' placeholder="Enter your email" required />
        </div>

        <div class="form-group mb-3">
            <label>Password</label>
            <input name="password" type="password" class="form-control" placeholder="Enter your password" required />
        </div>

        <button type="submit" class="btn btn-primary w-100">Login</button>
    </form>

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger mt-3">
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <p class="mb-0">@error.ErrorMessage</p>
            }
        </div>
    }
</div>
<link rel="stylesheet" href="~/css/site.css" />
