@model StudentPortal.ViewModels.GradeViewModel

<h2>Edit Grade</h2>

<form asp-action="EditGrade" method="post">
    <input type="hidden" asp-for="GradeID" />
    <input type="hidden" asp-for="StudentID" />
    <input type="hidden" asp-for="SubjectID" />

    <div class="form-group">
        <label>Term</label>
        <select asp-for="Term" class="form-control">
            @foreach (var term in Model.Terms)
            {
                if (term.Name == Model.Term)
                {
                    <option value="@term.Name" selected="selected">@term.Name</option>
                }
                else
                {
                    <option value="@term.Name">@term.Name</option>
                }
            }
        </select>
    </div>


    <div class="form-group">
        <label>Term</label>
        <select asp-for="Term" class="form-control">
            @foreach (var term in Model.Terms)
            {
                if (term.Name == Model.Term)
                {
                    <option value="@term.Name" selected="selected">@term.Name</option>
                }
                else
                {
                    <option value="@term.Name">@term.Name</option>
                }
            }
        </select>
    </div>


    <div class="form-group">
        <label>Score</label>
        <input asp-for="Score" class="form-control" />
    </div>

    <div class="form-group">
        <label>Comment</label>
        <input asp-for="Comment" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary mt-3">Update Grade</button>
</form>
